<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="66.0dp">

        <TextView
            android:id="@+id/voltageTextView"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Napätie na batériach: 0.00V"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="52.0dp" 
             />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp">

            <TextView
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/text_view_background"
                android:padding="16dp"
                android:layout_marginLeft="20dp"
                android:textColor="#FFFFFF" />

            <!-- Spacer View -->
            <View
                android:layout_width="8dp"
                android:layout_height="0dp"
                android:layout_weight="0" />

            <TextView
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/text_view_background"
                android:padding="16dp"
                android:textColor="#FFFFFF" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:text="Napájanie: "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView3"
                android:layout_marginLeft="10.5dp" />

            <Syncfusion.Android.ComboBox.SfComboBox
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="134.0dp"
                android:layout_height="42.0dp"
                android:id="@+id/sfComboBox1"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="117.5dp" 
             />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:text="Vonkajšie osvetlenie: "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView4"
                android:layout_marginLeft="10.0dp" />

            <Syncfusion.Android.ComboBox.SfComboBox
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="142.5dp"
                android:layout_height="42.0dp"
                android:id="@+id/sfComboBox2"
                android:layout_marginTop="8dp"
                android:layout_marginRight="0.0dp"
                android:layout_marginLeft="26.5dp" 
             />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:text="Led pásik: "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView5"
                android:layout_marginLeft="11.0dp" />

            <Syncfusion.Android.ComboBox.SfComboBox
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="142.5dp"
                android:layout_height="42.0dp"
                android:id="@+id/sfComboBox3"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="115.0dp"
                android:layout_marginRight="0.5dp" 
             />
        </LinearLayout>


        <TextView
            android:text="Red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF0000" />

        <SeekBar
            android:id="@+id/redSeekBar"
            android:layout_width="333.0dp"
            android:layout_height="wrap_content"
            android:max="255"
            android:layout_marginLeft="25.0dp" />

        <TextView
            android:text="Green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#00FF00" />

        <SeekBar
            android:id="@+id/greenSeekBar"
            android:layout_width="333.0dp"
            android:layout_height="wrap_content"
            android:max="255"
            android:layout_marginLeft="25dp" />

        <TextView
            android:text="Blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0000FF" />

        <SeekBar
            android:id="@+id/blueSeekBar"
            android:layout_width="333.0dp"
            android:layout_height="wrap_content"
            android:max="255"
            android:layout_marginLeft="25dp" />
        <View
            android:id="@+id/colorPreview"
            android:layout_width="122.0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="#000000" />

            <TextView
        android:id="@+id/selectedNumberTextView"
        android:text="Hustota LED: 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

        <SeekBar
            android:id="@+id/numberSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="4"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="50.0dp"
            android:layout_marginRight="50.0dp" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
